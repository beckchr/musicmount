<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>musicmount-${project.version}</baseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<excludes>
				<exclude>org.musicmount:musicmount-ui:jar</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>			
			<includes>
				<include>README.txt</include>
				<include>cfg/**</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<!--
			<source>../ui/target/musicmount-ui-${project.version}.jar</source>
			-->
			<source>../ui/target/jfx/app/musicmount-ui-${project.version}-jfx.jar</source>
			<outputDirectory>/</outputDirectory>
			<destName>musicmount-ui.jar</destName>
		</file>
		<file>
			<source>../core/target/appassembler/bin/musicmount</source>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>../core/target/appassembler/bin/musicmount.bat</source>
			<outputDirectory>/bin</outputDirectory>
		</file>
		<file>
			<source>../LICENSE.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>